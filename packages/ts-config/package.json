{
  "name": "@apitree.cz/ts-config",
  "version": "0.4.12",
  "description": "TypeScript configuration for ApiTree projects.",
  "keywords": [
    "apitree",
    "typescript",
    "config",
    "esm"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/ApiTreeCZ/toolbox",
    "directory": "packages/ts-config"
  },
  "sideEffects": false,
  "type": "module",
  "exports": {
    ".": "./base.json",
    "./app": "./app.json",
    "./library": "./library.json",
    "./nestjs": "./nestjs.json",
    "./nextjs": "./nextjs.json",
    "./nodejs": "./nodejs.json"
  },
  "files": [
    "app.json",
    "base.json",
    "library.json",
    "nestjs.json",
    "nextjs.json",
    "nodejs.json"
  ],
  "scripts": {
    "cleanup": "del .eslintcache .turbo node_modules",
    "fix": "turbo run format:fix lint:fix --no-daemon",
    "format": "prettier --check \"./**/*.{js,json,md}\"",
    "format:fix": "pnpm run format --write",
    "lint": "eslint --cache .",
    "lint:fix": "pnpm run lint --fix",
    "qa": "turbo run format lint --no-daemon"
  },
  "devDependencies": {
    "typescript": "^5.9.3"
  },
  "peerDependencies": {
    "typescript": "^5.7.3"
  }
}
