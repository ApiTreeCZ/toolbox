{
  "name": "@apitree.cz/vitest-config",
  "version": "0.7.11",
  "description": "Vitest configuration for ApiTree projects.",
  "keywords": [
    "apitree",
    "vitest",
    "config",
    "nodejs",
    "react",
    "nestjs"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/ApiTreeCZ/toolbox",
    "directory": "packages/vitest-config"
  },
  "sideEffects": false,
  "type": "module",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./base": {
      "import": "./dist/base.js",
      "types": "./dist/base.d.ts"
    },
    "./constants": {
      "import": "./dist/constants.js",
      "types": "./dist/constants.d.ts"
    },
    "./nestjs": {
      "import": "./dist/nestjs.js",
      "types": "./dist/nestjs.d.ts"
    },
    "./react": {
      "import": "./dist/react.js",
      "types": "./dist/react.d.ts"
    }
  },
  "types": "./dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "prebuild": "del dist tsconfig.build.tsbuildinfo",
    "build": "tsc --build tsconfig.build.json",
    "cleanup": "del .eslintcache .turbo tsconfig.tsbuildinfo tsconfig.build.tsbuildinfo tsconfig.lib.tsbuildinfo dist node_modules",
    "fix": "run-p ts format:fix lint:fix",
    "format": "prettier --check \"./**/*.{js,json,md,ts}\"",
    "format:fix": "pnpm run format --write",
    "lint": "eslint --cache .",
    "lint:fix": "pnpm run lint --fix",
    "qa": "run-p ts format lint",
    "ts": "tsc --build tsconfig.lib.json"
  },
  "dependencies": {
    "@swc/core": "^1.13.3",
    "@vitejs/plugin-react": "^5.0.0",
    "@vitest/coverage-v8": "^3.2.4",
    "unplugin-swc": "^1.5.5",
    "vite": "^7.1.10"
  },
  "devDependencies": {
    "jsdom": "^27.0.0",
    "vitest": "^3.2.4"
  },
  "peerDependencies": {
    "jsdom": "^26.0.0 || ^27.0.0",
    "vitest": "^3.0.4"
  },
  "peerDependenciesMeta": {
    "jsdom": {
      "optional": true
    }
  }
}
