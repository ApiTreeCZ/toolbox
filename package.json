{
  "name": "apitree.cz-toolbox",
  "version": "0.0.0",
  "private": true,
  "description": "Shared configurations and utilities for ApiTree projects.",
  "repository": {
    "type": "git",
    "url": "https://github.com/ApiTreeCZ/toolbox"
  },
  "license": "MIT",
  "author": "ApiTree s.r.o. <info@apitree.cz>",
  "contributors": [
    "Vít Rozsíval <vit.rozsival@apitree.cz"
  ],
  "type": "module",
  "scripts": {
    "build": "turbo run build --no-daemon",
    "cleanup": "turbo run cleanup --no-daemon",
    "postcleanup": "del .eslintcache .turbo tsconfig.tsbuildinfo node_modules",
    "fix": "turbo run fix --no-daemon",
    "postfix": "run-p postts postformat:fix postlint:fix",
    "format": "turbo run format --no-daemon --parallel",
    "format:fix": "turbo run format:fix --no-daemon --parallel",
    "postformat": "prettier --check \"./*.{js,json,md,yaml}\" \".changeset/**/*.md\" \".github/**/*.yaml\"",
    "postformat:fix": "pnpm run postformat --write",
    "postinstall": "is-ci || manypkg check",
    "lint": "turbo run lint --no-daemon",
    "lint:fix": "turbo run lint:fix --no-daemon",
    "postlint": "eslint --cache ./*.js",
    "postlint:fix": "pnpm run postlint --fix",
    "prepare": "is-ci || run-s prepare:husky build sync-project-references",
    "prepare:husky": "husky",
    "qa": "turbo run qa --no-daemon",
    "postqa": "run-p postts postlint postformat",
    "sync-project-references": "apitree sync-project-references",
    "test": "turbo run test --no-daemon",
    "test:coverage": "turbo run test:coverage --no-daemon",
    "ts": "turbo run ts --no-daemon",
    "postts": "tsc --project tsconfig.json"
  },
  "dependencies": {
    "is-ci": "^4.1.0",
    "npm-run-all2": "^7.0.2"
  },
  "devDependencies": {
    "@apitree.cz/cli": "workspace:*",
    "@apitree.cz/eslint-config": "workspace:*",
    "@apitree.cz/prettier-config": "workspace:*",
    "@apitree.cz/ts-config": "workspace:*",
    "@changesets/cli": "^2.27.12",
    "@commitlint/cli": "^19.6.1",
    "@commitlint/config-conventional": "^19.6.0",
    "@manypkg/cli": "^0.23.0",
    "@types/node": "^22.12.0",
    "del-cli": "^6.0.0",
    "eslint": "^9.19.0",
    "husky": "^9.1.7",
    "husky-check-email": "^0.0.7",
    "lint-staged": "^15.4.3",
    "prettier": "^3.4.2",
    "turbo": "^2.3.4",
    "typescript": "^5.7.3"
  },
  "packageManager": "pnpm@10.0.0",
  "engines": {
    "node": ">=22"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "@swc/core",
      "esbuild"
    ],
    "overrides": {
      "eslint": "9.19.0"
    }
  },
  "manypkg": {
    "ignoredRules": [
      "ROOT_HAS_PROD_DEPENDENCIES"
    ]
  }
}
